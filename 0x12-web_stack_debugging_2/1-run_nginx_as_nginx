#!/bin/bash

# Update nginx configuration file to run as nginx user and listen on port 8080
sed -i 's/user .*/user nginx;/g' /etc/nginx/nginx.conf
sed -i 's/listen 80;/listen 8080;/g' /etc/nginx/sites-available/default

# Ensure ownership and permissions are correct
chown -R nginx:nginx /var/log/nginx /var/cache/nginx /var/run/nginx.pid

# Restart nginx to apply changes
service nginx restart

